<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.mycnntacts.chcontacts.ContactDialogController">

    <headerText>Add New Contact Details Below...</headerText>

    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="First Name" GridPane.rowIndex="0"/>
            <TextField fx:id="fName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="last Name" GridPane.rowIndex="1" />
            <TextField fx:id="lName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone Number" GridPane.rowIndex="2"/>
            <TextField fx:id="phNum" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Notes" GridPane.rowIndex="3"/>
            <TextField fx:id="notes" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>

    </content>



</DialogPane>
